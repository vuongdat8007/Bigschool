@model Bigschool_TH_11.ViewModels.ChucVuEditViewModel
@{
    ViewBag.Title = "Edit Chuc Vu";
    ViewBag.ActiveMenu = "EditChucVu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit Chuc Vu</h2>

@using (Html.BeginForm("Save", "ChucVu"))
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(m => m.ChucVu.MaChucVu)

    <div class="form-group">
        @Html.LabelFor(m => m.ChucVu.TenChucVu, "Ten Chuc Vu")
        @Html.EditorFor(m => m.ChucVu.TenChucVu, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(m => m.ChucVu.TenChucVu, "", new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    @Html.ActionLink("Cancel", "Index", "ChucVu", null, new { @class = "btn btn-secondary" })
}