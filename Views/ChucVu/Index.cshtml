@model IEnumerable<Bigschool_TH_11.Models.ChucVu>
@{
    ViewBag.Title = "Chuc Vu";
    ViewBag.ActiveMenu = "ChucVu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Chuc Vu</h2>

<table class="table">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.MaChucVu</td>
            <td>@item.TenChucVu</td>
            <td>
                @Html.ActionLink("Edit", "ChucVu", new { id = item.MaChucVu }, new { @class = "btn btn-primary" })
            </td>
            <td>
                @Html.ActionLink("Edit Assigned CBNVs", "EditAssignedCBNVs", new { id = item.MaChucVu }, new { @class = "btn btn-primary" })
            </td>
        </tr>
    }
</table>