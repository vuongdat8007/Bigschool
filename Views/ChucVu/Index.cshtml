@model IEnumerable<Bigschool_TH_11.Models.ChucVu>
@{
    ViewBag.Title = "Chuc Vu";
    ViewBag.ActiveMenu = "ChucVu";
    ViewBag.ActiveSub = "IndexChucVu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Chuc Vu</h2>

<table class="table">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.MaChucVu</td>
            <td>@item.TenChucVu</td>
            <td>
                <a href="@Url.Action("Edit", "ChucVu", new { id = item.MaChucVu })" class="btn btn-primary">Edit</a>
            </td>
            @*<td>
                <a href="@Url.Action("EditAssignedCBNVs", "ChucVu", new { id = item.MaChucVu })" class="btn btn-primary">Edit Assigned CBNVs</a>
            </td>*@
        <td>
            <a href="@Url.Action("Delete", "ChucVu", new { id = item.MaChucVu })" class="btn btn-danger">Delete</a>
        </td>
        </tr>
    }
</table>