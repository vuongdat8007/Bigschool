<body class="background">
    <!-- Replace 'navbar-inverse' with 'navbar-dark bg-dark' -->
    <!-- Replace 'navbar-fixed-top' with 'fixed-top' -->
    <div class="navbar navbar-dark bg-dark fixed-top">
        <div class="container">
            <div class="navbar-header">
                <!-- Replace 'navbar-toggle' with 'navbar-toggler' -->
                <!-- Replace 'data-toggle' with 'data-bs-toggle' -->
                <!-- Replace 'data-target' with 'data-bs-target' -->
                <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="more options">
                    <span class="navbar-toggler-icon"></span>
                </button>
                @Html.ActionLink("QLNS Trường Học", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Add Course", "Create", "Courses")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Ứng Dụng QLNS Trường Học</p>
        </footer>
    </div>


