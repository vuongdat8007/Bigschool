        body {
            font-family: 'Roboto', sans-serif;
        }
        .background {
            background-image: url("/wallpaper.jpg");
            background-attachment: fixed;
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
            height: 100vh;
            overflow-x: hidden;
            overflow-y: auto;
        }
    </style>
